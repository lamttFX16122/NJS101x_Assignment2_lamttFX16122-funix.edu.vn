<!doctype html>
<html lang="en">
  
  <head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="onlyLogin/css/style.css">
    
  </head>
  
  <body>
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7 col-lg-5">
            <div class="login-wrap p-4 p-md-5">
              <div class="icon d-flex align-items-center justify-content-center">
                <span class="fa fa-user-o"></span>
              </div>
              <h3 class="text-center mb-4">Đăng nhập</h3>
              <%if(errMes){%>
              <p class="text-center mb-4 text-danger">Email hoặc mật khẩu không hợp lệ!</p>
              <%}%>
            <%if(flashMes?.length>0){%>
              <p class="text-center mb-4 text-danger"><%=flashMes%></p>
              <%}%>
                                <form action="/login" method="POST" class="login-form">
                                    <div class="form-group">
                                        <input type="email" id="validationServerUsername" value="<%=oldDoc.email%>" class="form-control rounded-left" placeholder="Email" name="email">
            </div>
            <div class="form-group d-flex">
              <input type="password" value="<%=oldDoc.password%>" class="form-control rounded-left" placeholder="Password" name="password">
            </div>
            <div class="form-group">
              <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng nhập</button>
            </div>
            <div class="form-group d-md-flex">
              <div class=" text-md-left">
                <!-- <a href="#">Quên mật khẩu</a> -->
              </div>
            </div>
            </form>
          </div>
        </div>
      </div>
      </div>
    </section>
    
    <script src="onlyLogin/js/jquery.min.js"></script>
    <script src="onlyLogin/js/popper.js"></script>
    <script src="onlyLogin/js/bootstrap.min.js"></script>
    <script src="onlyLogin/js/main.js"></script>
    
  </body>
  
</html>